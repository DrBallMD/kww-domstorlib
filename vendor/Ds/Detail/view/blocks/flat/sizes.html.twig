{% import '@detail/macro/table.html.twig' as table %}

<div class="domstor_object_size">
    <h3>Размеры</h3>
    <table>
        {{ table.row('Высота потолков:', block.height) }}
        {{ table.row('Количество уровней:', block.floorCount) }}
        {% set h = block.squareHouse %}{% set l = block.squareLiving %}{% set k = block.squareKitchen %}
        {% if h or l or k %}
            {{ table.emptyRow('Площадь, кв.м.:') }}
            {{ table.row('Общая:', h, 1) }}
            {{ table.row('Жилая:', l, 1) }}
            {{ table.row('Кухня:', k, 1) }}
        {% endif %}
    </table>
</div>