<?php
namespace Estate\Search\Form\Field;

/**
 * Description of RoomsField
 *
 * @author pahhan
 */
class PriceField extends SliderField
{
    public function __construct()
    {
        parent::__construct('price', array(
            'templating_key' => 'twig_form',
            'template' => 'fields/price.html.twig',
            'source_transformer' => new \Estate\Search\Form\Transformer\PriceTransformer(),
            'slider_min' => 100000,
            'slider_max' => 30000000,
            'slider_step' => 50000,
        ));

        $this->addForm(new \Spv_Form_Field_InputText('min', array(
            'templating_key' => 'twig_form',
            'template' => '@spv/input_text.html.twig',
            'label' => 'от',

        )));

        $this->addForm(new \Spv_Form_Field_InputText('max', array(
            'templating_key' => 'twig_form',
            'template' => '@spv/input_text.html.twig',
            'label' => 'до',
        )));
    }
}
