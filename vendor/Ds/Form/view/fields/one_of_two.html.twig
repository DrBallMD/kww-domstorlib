{% for key, value in form.getOptions() %}
    <label class="label-checkbox">
        <input type="checkbox"
               name="{{ form.getAttrName() }}"
               id="{{ form.getOptionId(key) }}"
               value="{{ key }}"
               {{ form.checked(key) }}
               {{ form.renderAttrs() }} /><span>{{ value }}</span>
    </label>
{% endfor %}
<script>
    jQuery(document).ready(function(){
        var new0 = $('#{{ form.getOptionId(0) }}');
        var new1 = $('#{{ form.getOptionId(1) }}');

        new0.change(function(){
            if( new1.attr('checked') ) new1.removeAttr('checked');
        });

        new1.change(function(){
            if( new0.attr('checked') ) new0.removeAttr('checked');
        });
    });
</script>
