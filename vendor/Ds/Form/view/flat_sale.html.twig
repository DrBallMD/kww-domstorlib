{% extends '@form/base_form.html.twig' %}
{% block regular_fields %}

<div class="row-fluid form-row">
    <div class="span5 rooms">{{ form.getForm('rooms').renderLabel(null, {class: 'label-heads'}) }} {{ form.getForm('rooms').render() }}</div>
    <div class="span4 district">
      {% include '@form/blocks/district_city.html.twig' %}
    </div>
</div>

<div class="row-fluid form-row">
    <div class="span5 price">{{ form.getForm('price').render() }}</div>
    <div class="span5 floor">
        {{ form.getForm('floor_type').renderLabel(null, {class: 'label-heads'}) }} {{ form.getForm('floor_type').render() }}
        {{ form.getForm('max_floor').renderLabel() }} {{ form.getForm('max_floor').render() }}
        {#<div class="is_new">{{ form.getForm('new').render() }}</div>#}
    </div>
</div>


{% endblock %}

{% block option_fields %}
<div><span class="sq">Площадь</span></div>

<div class="row-fluid form-row">
    <div class="span5 total">{{ form.getForm('square').render() }}</div>
    <div class="span5 dwell">{{ form.getForm('squarel').render() }}</div>
</div>

<div class="row-fluid form-row">
    <div class="span5 kitchen">{{ form.getForm('squarek').render() }}</div>
    <div class="span5 tog-com">
        {{ form.getForm('together').render() }}<br />
        {{ form.getForm('for_com').render() }}<br />
        {{ form.getForm('in_communal').render() }}<br />
    </div>
</div>

<div class="row-fluid form-row">
    <div class="span5 type_flat">{{ form.getForm('type').renderLabel('Тип квартиры:', {class: 'label-heads'}) }} {{ form.getForm('type').render() }}</div>
    <div class="span5 status">{{ form.getForm('state').renderLabel(null, {class: 'label-heads'}) }} {{ form.getForm('state').render() }}</div>
</div>
{% endblock %}
